#textdomain wesnoth-Trinity
[scenario]
	id="3_P06"
	name= _ "Landfall"
	map_data="{~add-ons/Trinity/maps/3_P05.map}"
	next_scenario=3_Finale
	victory_when_enemies_defeated=no
	{TURNS 38 34 30}

	[music]
	name="nunc_dimittis.ogg"
	[/music]

	{BMR_RESTORE_SIDE 3}
	{BMR_STORE_SIDE 3}
	{DEFAULT_SCHEDULE}

[story]
    [part]
        story= _ "Once on mainland, Nemesis and the South-Seas sailors hid in the woods, for they had to figure out get their bearings."
        background="misc/Trinity_cave.jpg"
    [/part]
    [part]
        story= _ "The brass sparrow came back to Nemesis, and she realized it was trying to guide them.  If she could find that soldier of Ares'..."
        background="misc/Trinity_cave.jpg"
    [/part]
    [part]
        story= _ "The group was led to the gates of a large port city that had been visible earlier from sea."
        background="misc/Trinity_cave.jpg"
    [/part]
[/story]


	[event]
	name=prestart
	[set_variable]
	name=ships_left
	{QUANTITY value 4 5 6}
	[/set_variable]
		[objectives]
		side=3
			[objective]
			condition=win
			description=_ "Sink $ships_left to break blockade"
			[/objective]
			[objective]
			condition=lose
			description=_ "Death of Nemesis"
			[/objective]
			[objective]
			condition=lose
			description=_ "Time runs out"
			[/objective]
		[/objectives]
	{GENERIC_UNIT 1 "Fencer" 13 8}
	{GUARDIAN}
	{GENERIC_UNIT 1 "Duelist" 38 18}
	{GENERIC_UNIT 1 "Duelist" 23 10}
	{GUARDIAN}
#ifdef NORMAL
	{GENERIC_UNIT 2 "Merman Fighter" 23 23}
#endif
#ifdef HARD
	{GENERIC_UNIT 2 "Merman Fighter" 32 19}
	{GUARDIAN}
	{GENERIC_UNIT 2 "Merman Spearman" 23 23}
#endif
	[endlevel]
	{CONTINUE}
	[/endlevel]
	[/event]

	[side]
	type=General
	id=Alden
